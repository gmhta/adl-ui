{
  "compilerOptions": {
    "declaration": true,
    "composite": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",  
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "paths": {
      "@timbod7/adl-rt/*": ["../adl-rt/*"],
      "@timbod7/adl-ui": ["../adl-ui/index.ts"],
      "@timbod7/adl-ui-styled": ["../adl-ui-styled/index.ts"],
    },
    "baseUrl": "."
  },
  "references": [
    {
      "path": "../adl-rt"
    },
    {
      "path": "../adl-ui"
    },
    {
      "path": "../adl-ui-styled"
    },
  ],
  "exclude": [
    "dist",
    "node_modules",
    "deno",
  ],
}
